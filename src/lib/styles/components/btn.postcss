@layer components
{
	.btn {
		@apply relative inline-flex items-center justify-center py-2 px-3 select-none drag-none;
		@apply text-sm bg-gray-700 rounded drop-shadow duration-150;
		@apply hover:bg-gray-600;
	}

	.btn-link {
		@apply btn;
		@apply bg-transparent hover:bg-transparent;
		@apply underline text-link;
	}
}
